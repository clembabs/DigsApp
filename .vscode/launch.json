    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run All Tests",
        "type": "dart",
        "request": "launch",
        "program": "./test/"
      },
      {
        "name": "Run App",
        "program": "lib/main.dart",
        "request": "launch",
        "type": "dart"
      },
      {
        "name": "Run Storybook",
        "program": "storybook/main_story.dart",
        "request": "launch",
        "type": "dart",
      },
      {
        "name": "Update Goldens",
        "request": "launch",
        "type": "dart",
        "program": "./test/",
        "args": ["--update-goldens"]
      },
      {
        "name": "Update Single Golden",
        "request": "launch",
        "type": "dart",
        "template": "run-test",
        "args": ["--update-goldens"]
      }
    ]
}